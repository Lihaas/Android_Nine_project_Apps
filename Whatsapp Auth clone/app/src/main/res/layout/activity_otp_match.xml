<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtpMatch"
    android:background="@drawable/zxc">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#353535"
            android:layout_margin="20dp"
            android:text="Waiting to automatically detect an SMS\n sent to +91xxxxxxxxxx"
            android:id="@+id/txt"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#3F9EC9"
            android:text="Wrong Number?"
            android:gravity="end"
            android:layout_marginTop="43dp"
            android:layout_marginRight="30dp"
            android:id="@+id/wrongNumber"            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:hint="----  -----  ----      ----  ----  ----"
            android:layout_below="@+id/wrongNumber"
            android:layout_centerHorizontal="true"
            android:id="@+id/otp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#B5B5B5"
            android:text="Enter 6-digit code"
            android:layout_below="@+id/otp"
            android:layout_centerHorizontal="true"
            android:id="@+id/enterCode"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/msg"
            android:layout_below="@+id/enterCode"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            android:id="@+id/msg"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#B5B5B5"
            android:text="Resend SMS"
            android:layout_below="@+id/enterCode"
            android:layout_centerHorizontal="true"
           android:layout_toRightOf="@+id/msg"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="57dp"
            android:id="@+id/msgText"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/call"
            android:layout_below="@+id/msg"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#B5B5B5"
            android:text="Call me"
            android:layout_below="@+id/msgText"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/msg"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="27dp"
          />










    </RelativeLayout>

</RelativeLayout>