<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/pic"
    android:weightSum="7"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
       android:layout_margin="20dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#ffffff"
            android:text="919992468544"
            android:textSize="45sp"
            android:gravity="bottom"

            android:layout_margin="10dp"
            android:id="@+id/dialog"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffff"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffff"
            android:layout_below="@+id/dialog" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff"
        android:layout_below="@+id/dialog"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <LinearLayout
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:weightSum="4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginTop="10dp"  >

            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/dialer_pad"
                android:layout_marginRight="20dp"
                android:text="1"
                android:textSize="25sp"
                android:id="@+id/b1"
                android:onClick="dos"/>

            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/dialer_pad"
                android:layout_marginRight="20dp"
                android:text="2"
                android:textSize="25sp"
                android:id="@+id/b2"
                android:onClick="dos"/>

            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/dialer_pad"
                android:text="3"
                android:textSize="25sp"
                android:id="@+id/b3"
                android:onClick="dos"/>






        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="3"
           android:layout_marginTop="10dp" >

            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/dialer_pad"
                android:layout_marginRight="20dp"
                android:text="4"
                android:textSize="25sp"
                android:id="@+id/b4"
                android:onClick="dos"/>

            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/dialer_pad"
                android:layout_marginRight="20dp"
                android:text="5"
                android:textSize="25sp"
                android:id="@+id/b5"
                android:onClick="dos"/>

            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/dialer_pad"
                android:text="6"
                android:textSize="25sp"
                android:id="@+id/b6"
                android:onClick="dos"/>






        </LinearLayout>



        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginTop="10dp" >

            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/dialer_pad"
                android:layout_marginRight="20dp"
                android:text="7"
                android:textSize="25sp"
                android:id="@+id/b7"
                android:onClick="dos"/>

            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/dialer_pad"
                android:layout_marginRight="20dp"
                android:text="8"
                android:textSize="25sp"
                android:id="@+id/b8"
                android:onClick="dos"/>

            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/dialer_pad"
                android:text="9"
                android:textSize="25sp"
                android:id="@+id/b9"
                android:onClick="dos"/>






        </LinearLayout>




        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginTop="10dp" >

            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/dialer_pad"
                android:layout_marginRight="20dp"
                android:onClick="dos"
                android:text="*"
                android:textSize="25sp"
                android:id="@+id/bstar"/>

            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/dialer_pad"
                android:layout_marginRight="20dp"
                android:text="0"
                android:textSize="25sp"
                android:id="@+id/bzero"
                android:onClick="dos"/>

            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/dialer_pad"
                android:text="+"
                android:textSize="25sp"
                android:id="@+id/bplus"
                android:onClick="dos"/>






        </LinearLayout>





    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff"
        android:layout_below="@+id/dialog"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"/>

<RelativeLayout
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="0dp">

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/qwe"
        android:layout_centerInParent="true"
        android:id="@+id/dial"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        />

<Button
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:background="@drawable/sd"
    android:layout_toRightOf="@+id/dial"
    android:layout_marginTop="10dp"
    android:id="@+id/back"
    android:onClick="dos" />
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/msg"
        android:layout_toLeftOf="@+id/dial"
        android:layout_marginTop="10dp"
        android:id="@+id/msg"
        />



</RelativeLayout>






</LinearLayout>